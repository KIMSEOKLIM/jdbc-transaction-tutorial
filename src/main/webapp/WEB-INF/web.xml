    <servlet>
        <servlet-name>JoinForm</servlet-name>
        <servlet-class>kr.co.mz.tutorial.servlet.JoinForm</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>JoinForm</servlet-name>
        <url-pattern>/join</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginHandler</servlet-name>
        <servlet-class>kr.co.mz.tutorial.servlet.handler.LoginHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginHandler</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BoardForm</servlet-name>
        <servlet-class>kr.co.mz.tutorial.servlet.BoardForm</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BoardForm</servlet-name>
        <url-pattern>/posts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContentForm</servlet-name>
        <servlet-class>kr.co.mz.tutorial.servlet.ContentForm</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ContentForm</servlet-name>
        <url-pattern>/posts/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CommentHandler</servlet-name>
        <servlet-class>kr.co.mz.tutorial.servlet.handler.CommentHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CommentHandler</servlet-name>
        <url-pattern>/addComment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WriteBoard</servlet-name>
        <servlet-class>kr.co.mz.tutorial.servlet.WriteBoardForm</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WriteBoard</servlet-name>
        <url-pattern>/posts/write</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Evaluation</servlet-name>
        <servlet-class>kr.co.mz.tutorial.servlet.handler.EvaluaiontHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Evaluaiont</servlet-name>
        <url-pattern>/evaluation</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>kr.co.mz.tutorial.servletListener.HikariCPInitializer</listener-class>
    </listener>
