<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>LoginForm</servlet-name>
        <servlet-class>kr.co.mz.tutorial.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginForm</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JoinForm</servlet-name>
        <servlet-class>kr.co.mz.tutorial.servlet.JoinServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>JoinForm</servlet-name>
        <url-pattern>/join</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginHandler</servlet-name>
        <servlet-class>kr.co.mz.tutorial.servlet.handler.LoginHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginHandler</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BoardForm</servlet-name>
        <servlet-class>kr.co.mz.tutorial.servlet.BoardForm</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BoardForm</servlet-name>
        <url-pattern>/posts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContentForm</servlet-name>
        <servlet-class>kr.co.mz.tutorial.servlet.ContentForm</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ContentForm</servlet-name>
        <url-pattern>/posts/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WriteBoard</servlet-name>
        <servlet-class>kr.co.mz.tutorial.servlet.WriteBoardServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WriteBoard</servlet-name>
        <url-pattern>/posts/write</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Evaluation</servlet-name>
        <servlet-class>kr.co.mz.tutorial.servlet.EvaluationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Evaluation</servlet-name>
        <url-pattern>/evaluation</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>kr.co.mz.tutorial.servletListener.HikariCPInitializer</listener-class>
    </listener>

    <error-page>
        <exception-type>kr.co.mz.tutorial.AlertException</exception-type>
        <location>/WEB-INF/jsp/alert.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>
</web-app>
